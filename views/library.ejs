<%- include("partials/header.ejs") %>

<div class="container">

    <!-- Success/Error Messages -->
    <p><%= successMessage %></p>
    <p><%= errorMessage %></p>

    <% library.forEach((videogame) => { %>
        <div class="card" style="width: 18rem;">
            <img src="<%= videogame.image %>" class="card-img-top" alt="<%= videogame.title %> Image">
            <div class="card-body">
                <h5 class="card-title"><%= videogame.title %></h5>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Release Date: <%= new Date(videogame.release_date).toLocaleDateString() %></li>
                <li class="list-group-item">Platforms: <%= videogame.platforms %></li>
                <li class="list-group-item">Genres: <%= videogame.genres %></li>
                <li class="list-group-item">
                    <form action="/delete-platform" method="POST">
                        <input type="hidden" name="videogameId" value="<%= videogame.id %>">
                        <select name="platform">
                            <% videogame.platforms.split(',').forEach((platform) => { %>
                                <option value="<%= platform %>"><%= platform %></option>
                            <% }); %>
                        </select>
                        <button type="submit">Delete Platform</button>
                    </form>
                </li>
                <li class="list-group-item">
                    <form action="/delete-videogame" method="POST">
                        <input type="hidden" name="videogameId" value="<%= videogame.id %>">
                        <button type="submit">Delete Videogame</button>
                    </form>
                </li>
            </ul>
        </div>
    <% }); %>
</div>

<%- include("partials/footer.ejs") %>